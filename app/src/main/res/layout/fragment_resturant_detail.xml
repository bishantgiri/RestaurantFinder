<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_open_now"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_opened" />

                <TextView
                    android:id="@+id/tv_rest_open_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/normal"
                    android:includeFontPadding="false"
                    android:paddingStart="5dp"
                    android:text="Open now"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="14sp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:clickable="false"
                android:isIndicator="true"
                android:rating="3"
                android:theme="@style/RatingBar" />

            <TextView
                android:id="@+id/tv_rest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:fontFamily="@font/bold"
                android:includeFontPadding="false"
                android:text="Restaurant Name"
                android:textColor="@color/colorAccent"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_rest_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_place"
            android:drawablePadding="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:drawableTint="@color/colorAccent"
            android:gravity="center_vertical"
            android:text="@string/restaurant_information"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_rest_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call_answer"
            android:drawablePadding="12dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:drawableTint="@color/colorAccent"
            android:gravity="center_vertical"
            android:text="@string/restaurant_information"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_rest_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_global"
            android:drawablePadding="12dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:drawableTint="@color/colorAccent"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/restaurant_information"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="12dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:drawableTint="@color/colorAccent"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Opening Hours: "
                android:textColor="@color/colorDarkGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_rest_opening_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:text="Opening Hours: "
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>